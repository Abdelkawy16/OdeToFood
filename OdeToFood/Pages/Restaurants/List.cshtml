@page
@model ListModel
@{
}
<h1>Restaurants</h1>

<table class="table">
    <form method="get">
        <div class="form-group">
            <div class="input-group">
                <input type="search" class="form-control" asp-for="SearchTerm"/>
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        Search
                    </button>
                </span>
            </div>
        </div>
    </form>
    @foreach (var item in Model.Restaurants)
   {
       <tr>
           <td>@item.Id</td>
           <td>@item.Name</td>
           <td>@item.Location</td>
           <td>@item.Cusinie</td>
                <!--model binding from query string and url parameter asp-route-restaurantId="item.Id" --> 
           <td><a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@item.Id">
               <span class="glyphicon glyphicon-zoom-in"></span>open
               </a>
               <a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@item.Id">
               <span class="glyphicon glyphicon-edit"></span>edit
               </a></td>
       </tr> 
   }
</table>
<a asp-page=".\Edit" class="btn btn-primary">Add New</a>

<div>@Model.Message</div>
